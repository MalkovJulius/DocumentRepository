<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("MetategsPartial")
    @await Html.PartialAsync("CssPartial")
    <title>@ViewData["Title"] - Хранилище документов</title>
</head>
<body>
    @await Html.PartialAsync("HeaderPartial")
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await Html.PartialAsync("FooterPartial")
    @await Html.PartialAsync("JsPartial")
    <a href="#" id="scroll-to-top" class="dmtop global-radius"><i class="fa fa-angle-up"></i></a>

    @RenderSection("Scripts", required: false)
</body>
</html>
