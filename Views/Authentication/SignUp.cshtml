@{
    Layout = "/Views/Shared/_Layout.cshtml";
    //Layout = null;
}
<h4>Регистрация</h4>
@using (Html.BeginForm("SignUp", "Home"))
{
    <div>
        Логин
        @Html.TextBox("login")
    </div>
    <br />

    <div>
        Пароль
        @Html.Password("password")
    </div>
    <br />


    <!--Finish it-->
    @*<form class="form-default" action="login-bg.mp4" method="POST">*@

        <div class="login-form">
            <!-- logo-login -->
            <div class="logo-login">
                <a href="index.html"><img src="assets/img/logo/loder.png" alt=""></a>
            </div>
            <h2>Registration Here</h2>

            <div class="form-input">
                <label for="name">Login</label>
                <input type="text" name="Login" placeholder="Full name" alphanum required>
                <div class="valid-feedback">Valid</div>
                <div class="invalid-feedback">Пожалуйста, заполните поле</div>
            </div>
            <div class="form-input">
                <label for="name">Password</label>
                <input type="password" name="Password" placeholder="Password" min="6" required>
                <div class="valid-feedback">Valid</div>
                <div class="invalid-feedback">Пожалуйста, заполните поле</div>
            </div>
            <div class="form-input">
                <label for="name">Confirm Password</label>
                <input type="password" name="PasConfirm" placeholder="Confirm Password" min="6" matches="Password" required>
                <div class="valid-feedback">Valid</div>
                <div class="invalid-feedback">Пожалуйста, заполните поле</div>
            </div>
            <div class="form-input pt-30">
                <input type="submit" name="submit" value="Registration">
            </div>
            <!-- Forget Password -->
            <a href="login.html" class="registration">login</a>
        </div>
    @*</form>*@

    <input type="submit" value="Зарегистрироваться" />
}
