@{
    Layout = "/Views/Shared/MainLayout.cshtml";
    //Layout = null;
}
<h4>Вход в систему</h4>

@using (Html.BeginForm("SignIn", "Home"))
{
    <fieldset>
        <div>
            Логин
            @Html.TextBox("login")
        </div>
        <br />

        <div>
            Пароль
            @Html.Password("password")
        </div>
        <br />

        <input type="submit" value="Войти" />
    </fieldset>


    @Html.ActionLink("Регистрация", "SignUp");
}
